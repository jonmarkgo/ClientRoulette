<h1>Listing callers</h1>

<table>
  <tr>
    <th>Phone</th>
    <th>Device</th>
    <th>Id</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @callers.each do |caller| %>
  <tr>
    <td><%= caller.phone %></td>
    <td><%= caller.device %></td>
    <td><%= caller.id %></td>
    <td><%= link_to 'Show', caller %></td>
    <td><%= link_to 'Edit', edit_caller_path(caller) %></td>
    <td><%= link_to 'Destroy', caller, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

